        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.14",
        "@types/node": "^18.8.5",
        "@types/react": "18.0.21",
        "@types/react-dom": "18.0.6",
        "cross-env": "^7.0.3",
        "eslint": "8.25.0",
        "eslint-config-next": "12.3.1",
        "nodemon": "^2.0.20",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
